<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F44336">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/toolBar_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alpha_32"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/toolBar_textView_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu"
            android:layout_toRightOf="@+id/toolBar_menu_icon"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/toolBar_menu_icon" />
        <ImageView
            android:id="@+id/toolBar_game_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/play_24"
            android:layout_toLeftOf="@+id/toolBar_info_icon"
            android:layout_marginRight="16dp"
            android:layout_toStartOf="@+id/toolBar_info_icon"
            android:layout_marginEnd="16dp"
            />
        <ImageView
            android:id="@+id/toolBar_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/info_24"
            android:layout_marginEnd="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            />


    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>